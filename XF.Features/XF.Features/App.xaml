<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XF.Features.App">
  <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">Yellow</Color>
            <Color x:Key="PrimaryDark">YellowGreen</Color>
            <Color x:Key="Accent">#4d4d4d</Color>
            <Color x:Key="LightBackgroundColor">Black</Color>
            <Color x:Key="DarkBackgroundColor">Black</Color>
            <Color x:Key="MediumGrayTextColor">#4d4d4d</Color>
            <Color x:Key="LightTextColor">Black</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="Black" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
